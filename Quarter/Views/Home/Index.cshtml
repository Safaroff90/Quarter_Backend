                    <div class="ltn__product-item ltn__product-item-4 text-center---">
                        <div class="product-img">
                                <a href="product-details.html"><img src="~/uploads/houses/@houses.HouseImages.FirstOrDefault(x=>x.PosterStatus==true)?.Image" style="height:300px; width:500px" alt="#"></a>
                            <div class="product-badge">
                                <ul>
                                        <li class="sale-badge bg-green">@(houses.IsSold == true ? "For Sale" : "Sold")</li>
                                </ul>
                            </div>
                            <div class="product-img-location-gallery">
                                <div class="product-img-location">
                                    <ul>
                                        <li>
                                                <a href="locations.html"><i class="flaticon-pin"></i> @houses.Area.Name</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="product-img-gallery">
                                    <ul>
                                        <li>
                                            <a href="product-details.html"><i class="fas fa-camera"></i> 4</a>
                                        </li>
                                        <li>
                                            <a href="product-details.html"><i class="fas fa-film"></i> 2</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="product-info">
                            <div class="product-price">
                                @if (houses.DiscountPercent > 0)
                                {
                                                        <span class="price">$@((houses.SalePrice * (100 - houses.DiscountPercent) / 100).ToString("0.00"))</span>
                                                        <del class="price-old">$@houses.SalePrice</del>
                                                                <span class="price-discount">@houses.DiscountPercent.ToString("0.##")%</span>
                                }
                                else
                                {
                                                        <span class="price">$@houses.SalePrice</span>
                                }

                            </div>
                            <div><h3><a asp-controller="house" asp-action="detail" asp-route-id="@houses.Id">@houses.Title</a></h3></div>
                            <h2 class="product-title"><a href="product-details.html"></a></h2>
                            <div class="product-description">
                                <p>
                                    @Html.Raw(@houses.Desc)
                                </p>
                            </div>
                            <ul class="ltn__list-item-2 ltn__list-item-2-before">
                                <li>
                                    <span>@houses.BedroomCount <i class="flaticon-bed"></i></span>
                                    Bedrooms
                                </li>
                                <li>
                                    <span>@houses.BathroomCount <i class="flaticon-clean"></i></span>
                                    Bathrooms
                                </li>
                                <li>
                                    <span>@houses.SquareFt <i class="flaticon-square-shape-design-interface-tool-symbol"></i></span>
                                    square Ft
                                </li>
                            </ul>
                        </div>
                        <div class="product-info-bottom">
                            <div class="real-estate-agent">
                                <div class="agent-img">
                                        <a href="team-details.html"><img src="~/uploads/salemanagers/@houses.Realtor.Image" alt="#"></a>
                                </div>
                                <div class="agent-brief">
                                    <h6><a href="team-details.html">@houses.Realtor.FullName</a></h6>
                                        <small>SaleManager</small>
                                </div>
                            </div>
                            <div class="product-hover-action">
                                <ul>
                                    <li>
                                            <a asp-controller="house" asp-action="gethouse" asp-route-id="@houses.Id" class="house-modal-btn">
                                            <i class="flaticon-expand"></i>
                                        </a>
                                    </li>
                                    <li>
                                            <a  asp-action="addtowishList" asp-controller="house" asp-route-houseId="@houses.Id "title="Wishlist" class="add-to-wishList">
                                            <i class="flaticon-heart-1"></i>
                                        </a>
                                    </li>
                                    <li>
                                            <a asp-controller="house" asp-action="detail" asp-route-id="@houses.Id">
                                            <i class="flaticon-add"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--  -->
        </div>
    </div>
</div>
