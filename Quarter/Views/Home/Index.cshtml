                                        </div>
                                        <div class="btn-wrapper animated">
                                            <a href="@slide.BtnUrl" class="theme-btn-1 btn btn-effect-1">@slide.BtnText1</a>
                                            <a href="@slide.BtnUrl2" class="btn btn-transparent btn-effect-3">@slide.BtnText2</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="slide-item-img @(i%2==0?"":"slide-img-left")">
                                    <img src="~/img/slider/@slide.Image" alt="#">
                                </div>
                            </div>
