@model House
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-info">Create</h1>

<div class="container-fluid">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="create" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Title">Name</label>
                        <input asp-for="Title" class="form-control">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId">Genre</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Genres,nameof(Category.Id),nameof(Category.Name)))">
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryId"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="RealtorId">Author</label>
                        <select asp-for="RealtorId" class="form-control" asp-items="@(new SelectList(ViewBag.Authors,nameof(Realtor.Id),nameof(Realtor.FullName)))">
                        </select>
                        <span class="text-danger" asp-validation-for="RealtorId"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TagIds">Tags</label>
                        <select asp-for="TagIds" class="form-control" asp-items="@(new SelectList(ViewBag.Tags,nameof(Tag.Id),nameof(Tag.Name)))">
                        </select>
                        <span class="text-danger" asp-validation-for="TagIds"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SalePrice">SalePrice</label>
                        <input asp-for="SalePrice" class="form-control">
                        <span class="text-danger" asp-validation-for="SalePrice"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CostPrice">CostPrice</label>
                        <input asp-for="CostPrice" class="form-control">
                        <span class="text-danger" asp-validation-for="CostPrice"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountPercent">DiscountPercent</label>
                        <input asp-for="DiscountPercent" class="form-control">
                        <span class="text-danger" asp-validation-for="DiscountPercent"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="StockStatus">StockStatus</label>
                        <input asp-for="StockStatus" class="form-control">
                        <span class="text-danger" asp-validation-for="StockStatus"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsNew">IsNew</label>
                        <input asp-for="IsNew" class="form-control">
                        <span class="text-danger" asp-validation-for="IsNew"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsFeatured">IsSpecial</label>
                        <input asp-for="IsFeatured" class="form-control">
                        <span class="text-danger" asp-validation-for="IsFeatured"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PosterFile">PosterFile</label>
                        <input asp-for="PosterFile" class="form-control">
                        <span class="text-danger" asp-validation-for="PosterFile"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsSold">HoverPosterFile</label>
                        <input asp-for="IsSold" class="form-control">
                        <span class="text-danger" asp-validation-for="IsSold"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageFiles">ImageFiles</label>
                        <input asp-for="ImageFiles" class="form-control">
                        <span class="text-danger" asp-validation-for="ImageFiles"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-info">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>