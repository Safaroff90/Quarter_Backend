@model List<Slider>
@{
    ViewData["Title"] = "Index";

    int counter = 0;
}

<div class="row justify-content-between align-content-center">
    <div class="col-md-4">
        <h1 class="m-0 text-info">Sliders</h1>
    </div>
    <div class="col-md-3 d-flex align-items-center">
        <a asp-action="create" class="btn"><i class="bi bi-clipboard-plus-fill text-info h1"></i></a>
    </div>

</div>

<div class="container-fluid">
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Order</th>
                    <th scope="col">Title</th>
                    <th scope="col">Image</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.Order</td>
                        <td>@item.Title</td>
                        <td><img width="100" src="~/uploads/sliders/@item.Image" /></td>
                        <td>
                            <a class="btn" asp-action="edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square h3 text-info"></i></a>
                            <a class="btn trash-btn" asp-action="delete" asp-route-id="@item.Id"><i class="bi bi-trash3 h3 text-danger"></i> </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-12">
        </div>

    </div>

</div>
