@model Slider
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-info">Create</h1>

<div class="container-fluid">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="create" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Order">Order</label>
                        <input asp-for="Order" value="@ViewBag.Order" class="form-control">
                        <span class="text-danger" asp-validation-for="Order"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" type="text" class="form-control">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Subtitle">Subtitle</label>
                        <input asp-for="Subtitle" type="text" class="form-control">
                        <span class="text-danger" asp-validation-for="Subtitle"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BtnText1">BtnText</label>
                        <input asp-for="BtnText1" type="text" class="form-control">
                        <span class="text-danger" asp-validation-for="BtnText1"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BtnText2">BtnText2</label>
                        <input asp-for="BtnText2" type="text" class="form-control">
                        <span class="text-danger" asp-validation-for="BtnText2"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BtnUrl">BtnUrl</label>
                        <input asp-for="BtnUrl" type="text" class="form-control">
                        <span class="text-danger" asp-validation-for="BtnUrl"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BtnUrl2">BtnUrl2</label>
                        <input asp-for="BtnUrl2" type="text" class="form-control">
                        <span class="text-danger" asp-validation-for="BtnUrl2"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc">Desc</label>
                        <textarea asp-for="Desc" type="text" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Desc"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageFile">ImageFile</label>
                        <input asp-for="ImageFile" class="form-control">
                        <span class="text-danger" asp-validation-for="ImageFile"></span>
                    </div>

                    <button type="submit" class="btn btn-outline-info">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>