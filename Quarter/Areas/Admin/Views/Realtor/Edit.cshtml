@model Realtor
@{
    ViewData["Title"] = "Edit";
}

<h1 class="m-0 text-info">Edit</h1>

<div class="container-fluid">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="edit" method="post">
                    <div class="form-group">
                        <label asp-for="FullName">FullName</label>
                        <input asp-for="FullName" type="text" class="form-control" id="FullNameInput">
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc">Description</label>
                        <textarea id="editor" asp-for="Desc" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Desc"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageFile">ImageFile</label>
                        <input asp-for="ImageFile" class="form-control">
                        <span class="text-danger" asp-validation-for="ImageFile"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-info">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/35.4.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}